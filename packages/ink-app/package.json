{
	"name": "@muzamint/ink-app",
	"version": "0.0.3",
	"license": "MIT",
	"bin": {
		"cli2": "dist/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "nx exec -- swc source -d dist",
		"dev": "nx exec -- swc source --watch -d dist",
		"check": "nx exec -- prettier --check .",
		"format": "nx exec -- prettier -w tsconfig.json package.json nx.json './{,source}/{*,*.test}.{ts,tsx,js,jsx}'",
		"test": "nx exec -- npm run _test -- ",
		"_test": "prettier --check . && ava"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"ink": "^4.1.0",
		"meow": "^11.0.0",
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@swc/cli": "^0.1.62",
		"@swc/core": "^1.3.76",
		"@types/figlet": "^1.5.6",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"nx": "16.5.5",
		"nx-cloud": "latest",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config",
	"nx": {
		"targets": {
			"build": {
				"outputs": [
					"{projectRoot}/dist"
				]
			}
		}
	}
}
